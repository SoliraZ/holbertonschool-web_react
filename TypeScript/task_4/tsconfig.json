{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "./js",
        "rootDir": "./js",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "js/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}